  <p>{$label_event}: {$event}</p>
  <p>{$label_event_date}: {$event_date}</p>
  <p>{$label_declared} {$declared}</p>
  <p>{$label_message}:</p>
  <p>{$message}</p>
  <p><a href="{$back_link}">{$back_text}</a></p>
