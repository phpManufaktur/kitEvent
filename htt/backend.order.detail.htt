<div class="order_detail">
  <p>{$title}<br />
  {$first_name} {$last_name}<br />
  {$company}<br />
  {$street}<br />
  {$zip} {$city}</p>
  <p>{$label_email} <a href="mailto:{$email}">{$email}</a></p>
  <p>{$label_phone} {$phone} <i>{$best_time}</i></p>
